<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_activitytwo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.examples.myapplication.bmiapp.Activitytwo"
    tools:showIn="@layout/activity_activitytwo"
    android:background="@drawable/back">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:id="@+id/myWeight"
        android:hint="Enter Weight in KG"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/myHeight"
        android:hint="Enter Height in M"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_below="@+id/myWeight"
        android:layout_alignLeft="@+id/myWeight"
        android:layout_alignStart="@+id/myWeight"
        android:layout_marginTop="35dp" />

    <TextView
        android:text="Your Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/mybmi"
        android:layout_alignStart="@+id/mybmi"
        android:layout_marginBottom="49dp"
        android:id="@+id/myResult"
        android:textColor="#ffffff"
        />

    <TextView
        android:text="Your BMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mybmi"
        android:textColor="#ffffff"
        android:layout_above="@+id/myResult"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="69dp" />

    <Button
        android:text="Calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_alignBottom="@+id/mybmi"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:onClick="calcbmi" />
</RelativeLayout>
